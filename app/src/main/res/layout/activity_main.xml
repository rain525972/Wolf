<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background2_img">


    <ImageButton

        android:id="@+id/button_login_driver"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/driver_img"
        android:onClick="sendDriver"
        android:text="司機"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bus_img"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/bus_img"
        android:onClick="sendBus"
        android:text="客運"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/box_img"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"

        android:layout_marginTop="340dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/box_img"
        android:onClick="sendBox"
        android:text="物流"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="68dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="105dp"
        android:text="使用者登入"
        android:textColor="#000000"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/testbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:onClick="sendtest"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="86dp" />


</androidx.constraintlayout.widget.ConstraintLayout>